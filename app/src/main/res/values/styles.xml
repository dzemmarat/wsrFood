<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>
    
    <style name="Text.17">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Text.17.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Text.Cursive">
        <item name="android:fontFamily">@font/italiano</item>
    </style>

    <style name="Text.Cursive.48">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Text.Cursive.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.40">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAppearance">@style/Text.Cursive.24</item>
        <item name="android:fontFamily">@font/italiano</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Regular">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>